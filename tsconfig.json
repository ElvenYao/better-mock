{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "ts-dist",
    "strict": true,
    "resolveJsonModule": true,
    "lib": [
      "es5",
      "es6",
      "es7",
      "dom"
    ]
  },
  "include": [
    "src/**/*.*"
  ]
}
